<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_automatic_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/again"
    tools:context="com.example.lux.racer.AutomaticMode">

    <TextView
        android:text="Automatic Mode Enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:id="@+id/chronometer3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer4"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignBaseline="@+id/chronometer3"
        android:layout_alignBottom="@+id/chronometer3"
        android:layout_toEndOf="@+id/chronometer3"
        android:layout_marginStart="87dp" />

    <TextView
        android:text="Speed Km/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/chronometer3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Distance- Meters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/chronometer4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="50dp" />

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoView"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/but6" />

    <Button
        android:text="Emergency Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/but5"
        android:id="@+id/but6"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/screen_background_light_transparent" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but5"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/chronometer4"
        android:layout_marginStart="29dp"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button"
        android:background="@android:drawable/screen_background_light_transparent" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginStart="20dp"
        android:id="@+id/progressBar2" />

    <TextView
        android:text="Car Battery Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/progressBar2"
        android:layout_toStartOf="@+id/textView4" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="15dp" />

    <TextView
        android:text="Time  Elapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentStart="true" />

</RelativeLayout>
