<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_racing_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/city"
    tools:context="com.example.lux.racer.RacingMode">

    <Button
        android:text="Manual Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but3"
        android:onClick="onButtonClick"
        android:background="@android:drawable/screen_background_light_transparent"
        android:layout_below="@+id/text2"
        android:layout_alignStart="@+id/text2" />

    <TextView
        android:text="Choose  Racing Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Automatic Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but2"
        android:onClick="onButtonClick"
        android:background="@android:drawable/screen_background_light_transparent"
        android:layout_below="@+id/text2"
        android:layout_toEndOf="@+id/but4"
        android:layout_marginStart="20dp" />

    <Button
        android:text="Test Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but4"
        android:onClick="onButtonClick"
        android:background="@android:drawable/screen_background_light_transparent"
        android:layout_below="@+id/but2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />
</RelativeLayout>
